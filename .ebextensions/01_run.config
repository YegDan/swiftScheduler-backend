commands:
  01_node_version:
    command: "nvm install 18 && nvm use 18"
    ignoreErrors: true
  02_log_staging_before_extract:
    command: "ls -al /var/app/staging > /var/log/staging_before_extract.log"
  03_extract_artifact:
    command: "unzip -o /var/app/staging/build_output.zip -d /var/app/staging"
  04_log_staging_after_extract:
    command: "ls -al /var/app/staging > /var/log/staging_after_extract.log"
  05_move_files:
    command: "cp -r /var/app/staging/* /var/app/current/"
  06_log_current_after_move:
    command: "ls -al /var/app/current > /var/log/current_after_move.log"
  07_install_dependencies:
    command: "npm install --unsafe-perm"
    cwd: /var/app/current
  08_log_current_after_install:
    command: "ls -al /var/app/current > /var/log/current_after_install.log"
  09_start_application:
    command: "npm start"
    cwd: /var/app/current



