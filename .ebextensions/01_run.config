commands:
  01_node_version:
    command: "nvm install 18 && nvm use 18"
    ignoreErrors: true
  02_extract_artifact:
    command: "unzip -o /var/app/staging/build_output.zip -d /var/app/current"
  03_install_dependencies:
    command: "sudo npm install --unsafe-perm"
    cwd: /var/app/current
  04_start_application:
    command: "sudo npm start"
    cwd: /var/app/current

