commands:
  00_set_permissions:
    command: "sudo chmod -R 755 /var/app/staging/.ebextensions && sudo chown -R webapp:webapp /var/app/staging/.ebextensions"
  01_node_version:
    command: "nvm install 18 && nvm use 18"
    ignoreErrors: true
  02_move_files:
    command: "cp -r /var/app/staging/* /var/app/current/"
  03_install_dependencies:
    command: "npm install --unsafe-perm"
    cwd: /var/app/current
  04_start_application:
    command: "npm start"
    cwd: /var/app/current






